@model IReadOnlyList<Post>
@{
    ViewData["Title"] = "Posts";
}


<div class="container">
    <div class="col-6">
        <a asp-action="Create" class="btn btn-primary">Create New Post</a>
    </div>
    @if (Model.Count > 0)
    {
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="col-5">Content</th>
                    <th scope="col" class="col-3">Created Date</th>
                    <th scope="col" class="col-2">Category</th>
                    <th scope="col" class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <th class="col-5" scope="row">@Html.Raw( post.Content)</th>
                        <td class="col-3">@post.CreatedDate.ToLocalTime()</td>
                        <td class="col-2">@post.Category.Name</td>
                        <td class="col-2">
                            <a asp-action="Update" asp-route-id="@post.Id" class="btn btn-secondary">
                                Update
                            </a>
                            <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    }
    else
    {
        <div class="alert alert-danger mt-3" role="alert">
            Fuck you there is no Posts available.
        </div>
    }
</div>
