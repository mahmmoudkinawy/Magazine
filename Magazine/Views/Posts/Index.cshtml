@model IReadOnlyList<Post>
@{
    ViewData["Title"] = "Posts";
}

<div class="container">
    <div class="col-6">
        <a asp-action="Create" class="btn btn-primary">Create New Post</a>
    </div>
</div>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Content</th>
            <th scope="col">Created Data</th>
            <th scope="col">Category</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <th scope="row">@post.Content</th>
                <td>@post.CreatedDate.ToLocalTime()</td>
                <td>@post.Category.Name</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
